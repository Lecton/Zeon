<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/listViewBg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/clientPicture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/clientPicture"
        android:text="TextView" />

    <TextView
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/surname"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/audioInvite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/clientPicture"
        android:layout_marginRight="54dp"
        android:layout_marginTop="289dp"
        android:src="@drawable/unclicked_stream" />

    <ImageButton
        android:id="@+id/videoInvite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/audioInvite"
        android:layout_marginTop="12dp"
        android:src="@drawable/unclicked_camera" />

    <ImageButton
        android:id="@+id/audioAccepts"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignTop="@+id/audioInvite"
        android:layout_marginLeft="17dp"
        android:src="@drawable/unclicked_microphone" />

</RelativeLayout>