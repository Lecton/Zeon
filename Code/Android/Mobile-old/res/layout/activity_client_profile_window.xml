<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/listViewBg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/clientPicture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/clientPicture"
        android:text="TextView" />

    <TextView
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/surname"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/videoAccept"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/clientPicture"
        android:layout_below="@+id/clientPicture"
        android:layout_marginRight="69dp"
        android:layout_marginTop="202dp"
        android:src="@drawable/clicked_camera" />
 
    <ImageButton
        android:id="@+id/audioAccept" 
        android:layout_width="100dp"  
        android:layout_height="100dp" 
        android:layout_alignLeft="@+id/email"
        android:layout_alignTop="@+id/videoAccept"
        android:layout_marginLeft="193dp"
        android:src="@drawable/clicked_microphone" />

     <Button
         android:id="@+id/audio_invite"
         android:layout_width="287dp"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/video_invite"
         android:layout_alignBottom="@+id/video_invite"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="36dp"
         android:background="@drawable/send_button"
         android:paddingLeft="32dp"
         android:paddingRight="32dp"
         android:text="Invite to audio" />

     <Button
         android:id="@+id/video_invite"
         android:layout_width="287dp"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/audioAccept"
         android:layout_marginRight="58dp"
         android:layout_marginTop="144dp"
         android:background="@drawable/send_button"
         android:paddingLeft="32dp"
         android:paddingRight="32dp"
         android:onClick="inviteToVideo"
         android:text="Invite to video" />

</RelativeLayout>