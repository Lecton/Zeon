<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/listViewBg" >

    <ImageView
        android:id="@+id/clientPicture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="499dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/clientPicture"
        android:layout_x="304dp"
        android:layout_y="8dp"
        android:text="Name" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="499dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="12dp"
        android:text="Surname" />

    <TextView
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView02"
        android:text="TextView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="466dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView01"
        android:text="TextView" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="499dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/surname"
        android:layout_marginTop="10dp"
        android:text="Email" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/surname"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView04"
        android:text="TextView" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="499dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="12dp"
        android:text="Title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView03"
        android:text="TextView" />

    <TextView
        android:id="@+id/aboutme"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView05"
        android:layout_below="@+id/TextView05"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="12dp"
        android:text="abc" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="499dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/clientPicture"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="25dp"
        android:text="About Me" />

    <ImageButton
        android:id="@+id/audioAccept"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/title"
        android:layout_alignTop="@+id/videoAccept"
        android:layout_marginLeft="152dp"
        android:src="@drawable/clicked_microphone" />

    <ImageButton
        android:id="@+id/videoAccept"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/clientPicture"
        android:layout_below="@+id/clientPicture"
        android:layout_marginTop="297dp"
        android:src="@drawable/clicked_camera" />

</RelativeLayout>