<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.publicCaptivation.stream2me.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.publicCaptivation.stream2me.client.Client"
            android:label="@string/title_activity_client" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.SplashWindow"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.LoginWindow"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.MainWindow"
            android:label="@string/title_activity_main_window" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.ContactWindow"
            android:label="@string/title_activity_message_window" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.ProfileWindow"
            android:label="@string/title_activity_profile_window" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.mobile.ContactWindow"
            android:label="@string/title_activity_contact_window" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.ClientProfileWindow"
            android:label="@string/title_activity_client_profile_window" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.GroupMessages"
            android:label="@string/title_activity_group_messages" >
        </activity>
        <activity
            android:name="com.publicCaptivation.stream2me.client.gui.VideoStreamWindow"
            android:label="@string/title_activity_video_stream_window" >
        </activity>
    </application>

</manifest>
